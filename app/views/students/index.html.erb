<h1>Listing all the Students</h1>

<%= notice %>

<div>
  <%= link_to 'Add new Student', new_student_path %>
</div>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3">Actions<th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
    <td><%= student.first_name %><td>
    <td><%= student.last_name %><td>
    <td><%= student.email %><td>
    <td><%= link_to 'View', student %><td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to "Destroy", student, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %><td>
    </tr>
  <% end %>
  </tbody>
</table>
